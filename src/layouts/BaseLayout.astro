---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.vue';
import Footer from '../components/Footer.vue';
const { title } = Astro.props
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <BaseHead title={title}/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link
    href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
    rel="stylesheet"
  />
    <link rel="stylesheet" href="/styles/global.css" />
    <script is:inline src="/scripts/plotly-2.26.0.min.js" charset="utf-8"></script>
  </head>
  <body>
    <div class="container">
    <Header />
    <nav>
      <a href="#">Home</a>
      <a href="#">Posts</a>
      <a href="#">Contact</a>
    </nav>
    <div>
      <h1 class="title">{ title }</h1>
      <slot /> <!-- your content is injected here -->
    </div>
    <Footer />
  </div>
  </body>
</html>


<style>
/* Grid settings */
.container {
  display: grid;
  grid-template-columns: 
    1fr [container-start] minmax(0, 1200px) [container-end] 1fr;
    gap: var(--gap);
    padding-top: calc(var(--gap) * 2);
    padding-bottom: calc(var(--gap) * 2);
}

.container > * {
  grid-column: container;
}

.title {
  font-family: 'Rubik', sans-serif;
  font-weight: 400;
}
</style>